{
    "name": "odd-dashboard",
    "private": true,
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "prepare": "svelte-kit sync || echo ''",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "format": "prettier --write .",
        "lint": "prettier --check .",
        "db:push": "drizzle-kit push",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:studio": "drizzle-kit studio",
        "docker:up": "docker compose up -d",
        "docker:down": "docker compose down",
        "docker:logs": "docker compose logs -f postgres",
        "docker:reset": "docker compose down -v && docker compose up -d",
        "db:test": "node scripts/test-db-connection.js",
        "db:seed": "tsx scripts/seed-ecosystems.ts",
        "db:wipe": "tsx scripts/wipe-database.ts",
        "db:reset": "tsx scripts/reset-database.ts",
        "db:link-forks": "tsx scripts/link-fork-parents.ts",
        "db:sync-parents": "tsx scripts/sync-parent-repositories.ts"
    },
    "devDependencies": {
        "@sveltejs/adapter-auto": "^7.0.0",
        "@sveltejs/kit": "^2.49.2",
        "@sveltejs/vite-plugin-svelte": "^6.2.1",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/typography": "^0.5.19",
        "@tailwindcss/vite": "^4.1.18",
        "@types/node": "^25.0.3",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "dotenv": "^17.2.3",
        "drizzle-kit": "^0.31.8",
        "drizzle-orm": "^0.45.1",
        "prettier": "^3.7.4",
        "prettier-plugin-svelte": "^3.4.1",
        "prettier-plugin-tailwindcss": "^0.7.2",
        "svelte": "^5.46.0",
        "svelte-check": "^4.3.4",
        "tailwind-merge": "^3.4.0",
        "tailwindcss": "^4.1.18",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "vite": "^7.3.0"
    },
    "dependencies": {
        "@lucide/svelte": "^0.561.0",
        "@octokit/rest": "^22.0.1",
        "chart.js": "^4.5.1",
        "postgres": "^3.4.7",
        "zod": "^4.2.1"
    }
}
